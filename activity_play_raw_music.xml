<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlayRawMusicActivity" >

    <TextView
        android:id="@+id/playwithrawmusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_raw_music" />
    
    <ImageView
        android:id="@+id/henkays_ikuisuudesta_happynewyear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/playwithrawmusic"
        android:layout_alignTop="@+id/playwithrawmusic"
        android:layout_marginTop="21dp"
        android:contentDescription="@string/henkays_ikuisuudesta_happynewyear_cover_description"
        android:paddingTop="32dp"
        android:scaleType="fitXY"
        android:src="@drawable/henkays_ikuisuudesta_happynewyear" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/henkays_ikuisuudesta_happynewyear"
        android:layout_below="@+id/henkays_ikuisuudesta_happynewyear"
        android:layout_marginTop="16dp"
        android:onClick="playRawTThavearottennewyear"
        android:paddingBottom="8dp"
        android:text="@string/playhappynewyear" />
    
    <ScrollView
        android:id="@+id/scrolly"
        android:layout_width="320dp"
        android:layout_height="160dp"
        android:layout_below="@id/play"
        android:paddingTop="16dp" >
    	
    	<TextView
        	android:id="@+id/happynewyearlyrics"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:paddingTop="8dp"
        	android:text="@string/happynewyearlyrics"
        	android:textSize="16sp" />
        
    </ScrollView>

    <ImageView
        android:id="@+id/happynewyearpromo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/henkays_ikuisuudesta_happynewyear"
        android:layout_toRightOf="@+id/playwithrawmusic"
        android:contentDescription="@string/happynewyear_cover_description"
        android:paddingLeft="16dp"
        android:paddingTop="32dp"
        android:scaleType="fitXY"
        android:src="@drawable/happynewyearpromo" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrolly"
        android:layout_toRightOf="@+id/playwithrawmusic"
        android:onClick="stopRawTThavearottennewyear"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:text="@string/stophappynewyear" />
    
</RelativeLayout>
